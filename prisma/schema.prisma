generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Portfolio {
  id          String   @id @default(cuid())
  title       String
  description String?
  isPublished Boolean  @default(false)
  content     Json?    // Store the complete portfolio JSON for flexibility
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  
  // Relations
  experiences Experience[]
  projects    Project[]
  skills      Skill[]
  
  @@map("portfolios")
}

model Experience {
  id          String   @id @default(cuid())
  role        String
  organization String
  period      String
  description String?
  bullets     Json?    // JSON array of bullet points
  order       Int      @default(0)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  
  @@map("experiences")
}

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  experiences Experience[]
  
  @@map("categories")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  link        String?
  tags        Json?    // JSON array of tags
  order       Int      @default(0)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  @@map("projects")
}

model Skill {
  id          String   @id @default(cuid())
  name        String
  category    String?
  level       Int?     // 1-5 scale
  order       Int      @default(0)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  @@map("skills")
}

model MediaAsset {
  id          String   @id @default(cuid())
  filename    String
  originalName String
  filePath    String
  fileSize    Int
  mimeType    String
  altText     String?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("media_assets")
}

model User {
  id            String   @id @default(cuid()) // Can be Supabase UUID if we force it
  email         String   @unique
  name          String?
  role          String   @default("user") // "admin" | "user"
  plan          String   @default("free") // "free" | "pro"
  image         String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  portfolios    Portfolio[]
  posts         Post[]
  
  @@map("users")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  @@map("posts")
}